public class Main {
    public static void main(String[] args) {
        int num = 1; // Starting number
        for (int i = 1; i <= 4; i++) { // Outer loop for rows
            for (int j = 1; j <= i; j++) { // Inner loop for columns
                System.out.print(num + " ");
                num++;
            }
            System.out.println(); // Move to next line
        }
    }
}
