import java.util.*;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int a = sc.nextInt(); 
        int s = 4;            
        int result = 1;

        for (int i = 1; i <= a; i++) {
            result = result * s;  
        }

        System.out.println(result);
    }
}
Output:
6
4096
